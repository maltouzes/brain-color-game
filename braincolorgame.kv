            text: "Start"
            on_press: root.manager.current = 'game-repeat'
            on_press: root.manager.get_screen('game-repeat').start_started(1)
            on_press: root.manager.get_screen('game-repeat').ini()
            on_press: root.manager.get_screen('game-repeat').easy()
            on_press: root.manager.get_screen('game-repeat').remember()
        ButtonStart:
            source: os.getcwd() + "/Button-Repeat-Mode-Easy-vertical.png"
            pos_hint: {'center_x': 0.7, 'center_y': 0.3}
            size_hint: 0.1, 0.3
            text: "Start"
            on_press: root.manager.current = 'game-repeat'
            on_press: root.manager.get_screen('game-repeat').start_started(1)
            on_press: root.manager.get_screen('game-repeat').ini()
            on_press: root.manager.get_screen('game-repeat').hard()
            on_press: root.manager.get_screen('game-repeat').remember()
        ButtonStart:
            source: os.getcwd() + "/Button-Repeat-Mode-Medium-vertical.png"
            pos_hint: {'center_x': 0.48, 'center_y': 0.7}
            size_hint: 0.1, 0.3
            text: "Start"
            on_press: root.manager.current = 'game-repeat'
            on_press: root.manager.get_screen('game-repeat').start_started(1)
            on_press: root.manager.get_screen('game-repeat').ini()
            on_press: root.manager.get_screen('game-repeat').easy()
            on_press: root.manager.get_screen('game-repeat').forgot()
        ButtonStart:
            source: os.getcwd() + "/Button-Repeat-Mode-Hard-vertical.png"
            pos_hint: {'center_x': 0.48, 'center_y': 0.3}
            size_hint: 0.1, 0.3
            text: "Start"
            on_press: root.manager.current = 'game-repeat'
            on_press: root.manager.get_screen('game-repeat').start_started(1)
            on_press: root.manager.get_screen('game-repeat').ini()
            on_press: root.manager.get_screen('game-repeat').hard()
            on_press: root.manager.get_screen('game-repeat').forgot()
        ButtonExit:
            source: os.getcwd() + ("/Button-Return-vertical.png")
            pos_hint: {'center_x': 0.2, 'y': 0.4}
            size_hint: 0.6, 0.25
            on_press: root.manager.current = 'start'

<GameScreenRepeat>:
    GridLayout:
        cols: 2
        Button:
            id: bt1
            background_color: root.colours['red']
            on_press: root.bt1_pressed()
        Button:
            id: bt2
            background_color: root.colours['blue']
            on_press: root.bt2_pressed()
        Button:
            id: bt3
            background_color: root.colours['yellow']
            on_press: root.bt3_pressed()
        Button:
            id: bt4
            background_color: root.colours['green']
            on_press: root.bt4_pressed()

<MenuScreen>:
    Image:
        source: os.getcwd() + "/ColorWord_fond.png"
    FloatLayout:

        orientation: 'vertical'
        background_color: [1, 1, 0, 1]
        height: root.height
        width: root.width + 100
        spacing: 8
        BoxLayout:
            Label:
                pos_hint: {'center_x': 0.5, 'y': 0.4}
                font_size: 18
                text: " Mute/Unmute"
                color: 0,0,0,1
            CheckBox:
                pos_hint: {'center_x': 0.5, 'y': 0.4}
                on_press: root.manager.get_screen('game').sound_play()
                on_active: root.manager.get_screen('game').self_active()

        ButtonColours:
            source: os.getcwd() + ("/Button-Colours-Mode.png")
            pos_hint: {'center_x': 0.5, 'y': 0.6}
            size_hint: 0.8, 0.25
            on_press: root.sound_validation()
            on_press: root.manager.current = 'game'
            on_press: root.start_color_mode()
        ButtonText:
            source: os.getcwd() + ("/Button-Text-Mode.png")
            pos_hint: {'center_x': 0.5, 'y': 0.37}
            size_hint: 0.8, 0.25
            on_press: root.start_text_mode()
            on_press: root.sound_validation()
            on_press: root.manager.current = 'game'
        ButtonExit:
            source: os.getcwd() + ("/Button-Return.png")
            pos_hint: {'center_x': 0.5, 'y': 0}
            size_hint: 0.6, 0.25
            on_press: root.manager.current = 'start'

<GameScreen>:
    BoxLayout:
        spacing: 5
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            # spacing: 5
            BoxLayout:
                spacing: 10
                BoxLayout:
                    Label:
                        font_size: 18
                        text: "Time Mode"
                    Switch:
                        # pos_hint: {'center_x': 0.48, 'y': 0.25}
                        on_active: root.sound_play()
                        on_active: root.change_time_mode()
                        active: root.active
                BoxLayout:
                    #Â padding: [1, 1, 1, 1]
                    # spacing: 25
                    Label:
                        font_size: 18
                        text: " Mute/Unmute"
                    CheckBox:
                        on_press: root.sound_play()
                        on_active: root.self_active()
        BoxLayout:
            size_hint_y: None
            Label:
                id: welcome_text
                font_size: 20
                size_hint_y: None
                height: 100
                # text: root.text
                text: root.text
            Label:
                id: points
                font_size: 20
                size_hint_y: None
                height: 100
                text: str(root.points_str)
        FloatLayout:
            # spacing: [10, 10]
            # padding: [10, 10, 10, 10]
            # cols: 2
            Button:
                id: bt1
                size_hint: 0.5, 0.4
                pos_hint: {'x': 0, 'y': 0}
                text: root.texts[0]
                color: root.colors[0]
                font_size: 40
                background_color: [0.11, 0.06, 0.23, 1]
                on_press: app.text_2 = str(root.t_final_no_penality)
                on_press: app.text_4 = str(int(app.text_3)*3)
                on_press: app.text_5 = str(root.t_final)
                on_press: app.text_6 = str(root.records) + str(root.t_best)
                on_press: root.ask()
                on_press: root.start()
                on_press: root.count_points(0)
                on_press: app.text_3 = str(root.no_points)
            Button:
                id: bt2
                size_hint: 0.5, 0.4
                # size: root.width/4, root.height/4
                pos_hint: {'x': 0.5, 'y': 0.6}
                text: root.texts[1]
                color: root.colors[1]
                font_size: 40
                background_color: [0.11, 0.06, 0.23, 1]
                on_press: app.text_2 = str(root.t_final_no_penality)
                on_press: app.text_4 = str(int(app.text_3)*3)
                on_press: app.text_5 = str(root.t_final)
                on_press: app.text_6 = str(root.records) + str(root.t_best)
                on_press: root.ask()
                on_press: root.start()
                on_press: root.count_points(1)
                on_press: app.text_3 = str(root.no_points)
            Button:
                id: bt3
                size_hint: 0.5, 0.4
                # size: root.width/8, root.height/8
                pos_hint: {'x': 0.5, 'y': 0}
                text: root.texts[2]
                color: root.colors[2]
                font_size: 40
                background_color: [0.11, 0.06, 0.23, 1]
                on_press: app.text_2 = str(root.t_final_no_penality)
                on_press: app.text_4 = str(int(app.text_3)*3)
                on_press: app.text_5 = str(root.t_final)
                on_press: app.text_6 = str(root.records) + str(root.t_best)
                on_press: root.ask()
                on_press: root.start()
                on_press: root.count_points(2)
                on_press: app.text_3 = str(root.no_points)
            Button:
                id: bt4
                size_hint: 0.5, 0.4
                # size: root.width/4, root.height/4
                pos_hint: {'x': 0, 'y': 0.6}
                text: root.texts[3]
                color: root.colors[3]
                font_size: 40
                background_color: [0.11, 0.06, 0.23, 1]
                on_press: app.text_2 = str(root.t_final_no_penality)
                on_press: app.text_4 = str(int(app.text_3)*3)
                on_press: app.text_5 = str(root.t_final)
                on_press: app.text_6 = str(root.records) + str(root.t_best)
                on_press: root.ask()
                on_press: root.start()
                on_press: root.count_points(3)
                on_press: app.text_3 = str(root.no_points)
            Buttonmy:
                # source: ("/home/user/Programmes/brain-color-game3/brain-color-game/blue.png")
                size_hint: 0.1, 0.1
                id: bt_q
                background_color: [0.76, 0.255, 0.7, 1]
                text: root.text_button
                on_press: root.ask()
                on_press: root.start()
                on_press: root.count_points(5)
                font_size: 40
                # size_hint: 0.3, 0.3
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}

<WinScreen>:
    Image:
        source: os.getcwd() + "/BCG_fond.png"
    FloatLayout:
        # canvas.before:
          #  Color:
           #     rgba: 0.11, 0.055, 0.23, 1
            #Rectangle:
             #   pos: self.pos
              #  size: self.size
        size: root.size
        pos: root.pos
        orientation: 'vertical'
        Label:
            pos_hint: {'center_x': 0.5, 'y': 0.35}
            font_size: 20
            text: "You win !"
        Label:
            pos_hint: {'center_x': 0.5, 'y': 0.28}
            font_size: 20
            text: root.text_2
            text: "time: " + app.text_2 + " seconds"
        Label:
            id: label_3
            pos_hint: {'center_x': 0.5, 'y': 0.20}
            font_size: 20
            text: "Miss: " + app.text_3
        Label:
            pos_hint: {'center_x': 0.5, 'y': 0.10}
            font_size: 20
            text: "Penality: 3x" + app.text_3 + " = " + app.text_4 + " seconds"
        Label:
            pos_hint: {'center_x': 0.5, 'y': 0.0}
            font_size: 20
            text: "Time final: " + app.text_5 + " seconds"
        Label:
            pos_hint: {'center_x': 0.5, 'y': -0.2}
            font_size: 20
            text: app.text_6
        ButtonOk:
            source: os.getcwd() + ("/Button-Ok.png")
            pos_hint: {'center_x': 0.5, 'y': 0.1}
            size_hint: 0.5, 0.12
            on_press: root.manager.current = 'game'
            on_press: root.sound_stop()
