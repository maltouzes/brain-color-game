#:kivy 1.9.0
#:import os os
<StartScreen>:
    Image:
        source: os.getcwd() +"/BCG_fond.png"
    FloatLayout:
        BoxLayout:
            Label:
                pos_hint: {'center_x': 0.5, 'y': 0.4}
                font_size: 18
                text: " Mute/Unmute"
            CheckBox:
                pos_hint: {'center_x': 0.5, 'y': 0.4}
                on_press: root.manager.get_screen('game').sound_play()
                on_active: root.manager.get_screen('game').self_active()
        ButtonColorWord:
            source: os.getcwd() + "/Button-Color-Word.png"
            size_hint: 0.7, 0.2
            pos_hint: {'center_x': 0.5, 'y': 0.6}
            on_press: root.manager.current = 'menu'
        ButtonMenuRepeat:
            source: os.getcwd() + "/Button-Repeat-Mode.png"
            size_hint: 0.7, 0.20
            pos_hint: {'center_x': 0.5, 'y': 0.35}
            on_press: root.manager.current = 'menu-repeat'
        ButtonExit:
            source: os.getcwd() + ("/Button-Exit.png")
            pos_hint: {'center_x': 0.5, 'y': 0}
            size_hint: 0.6, 0.25
            on_press: root.leave()


<MenuScreenRepeat>:
