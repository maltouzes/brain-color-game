<BoxLayoutGame>:
    orientation: 'vertical'
    Label:
        id: welcome_text
        font_size: 40
        size_hint_y: None
        height: 200
        text: root.text
    BoxLayout:
        Button:
            id: bt1
            text: root.texts[0] 
            color: root.colors[0]
            font_size: 40
            on_press: root.start()
        Button:
            id: bt2
            text: root.texts[1]
            color: root.colors[1]
            font_size: 40
            on_press: root.start()
    BoxLayout:
        Button:
            id: bt3
            text: root.texts[2]
            color: root.colors[2]
            font_size: 40
            on_press: root.start()
        Button:
            id: bt4
            text: root.texts[3]
            color: root.colors[3]
            font_size: 40
            on_press: root.start()
